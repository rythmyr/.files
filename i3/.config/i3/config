# Screenshots
bindsym --release ctrl+Print exec --no-startup-id ~/scripts/screenshot.sh
bindsym --release Print exec --no-startup-id ~/scripts/fullscreenshot.sh

# Screen locking
bindsym $mod+b exec --no-startup-id ~/scripts/lock.zsh

# Audio and Music
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

#Scratchpad
set $resize resize set 90 ppt 90 ppt, move position center

for_window [class="^Spotify$"] move scratchpad
bindsym $mod+s [class="^Spotify$"] scratchpad show, $resize

bindsym $mod+n [title="^NOTES$" class="^Emacs$"] exec ~/scripts/emacsnotes.zsh NOTES
bindsym $mod+t [title="^TODO$" class="^Emacs$"] exec ~/scripts/emacsnotes.zsh TODO
for_window [title="^NOTES$" class="^Emacs$"] mark notes, move scratchpad, scratchpad show, $resize
for_window [title="^TODO$" class="^Emacs$"] mark todo, move scratchpad, scratchpad show, $resize

bindsym $mod+Shift+z move scratchpad
bindsym $mod+z scratchpad show, $resize

for_window [title="^SCREENSHOT$" class="^feh$"] floating enable, move absolute position 0 0

