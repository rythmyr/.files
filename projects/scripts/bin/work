#!/usr/bin/env zsh

local session="work"

export RYTH_ZSH_NOFETCH="1"

local function do_work() {
    tmux selectp -t 0
    tmux send-keys "cd $PROJECT_DIR;source sourceme;cd $PROJECT_DIR/repo;run-start" C-m

    tmux selectp -t 1
    tmux send-keys "th;cd $PROJECT_DIR;source sourceme;cd $PROJECT_DIR/repo;edit" C-m
}

if [[ -z $PROJECT_DIR ]]; then
    if [[ $PROJECT_DEFAULT ]]; then
        which pj
        pj $PROJECT_DEFAULT
    fi
fi



if [[ $TMUX ]]; then
    # tmux already running, already attached
    tmux selectp -t 1 >/dev/null 2>/dev/null
    if [[ $? -ne 0 ]]; then
        tmux splitw -v
    fi
    do_work

    exit 0
fi

# -d detach from session (so we can send keys right away)
tmux new-session -d -s $session -n vim >/dev/null 2>/dev/null
if [ $? -ne 0 ]; then
    #session already exists
    tmux a -t $session
else
    #session was created successfully
    tmux splitw -v

    do_work
    #attach to the session
    tmux a -t $session
fi
